@using SolucionProyectoUI.Models
@model LoginViewModel

@{
    ViewBag.Title = "Iniciar sesión";
}

<main class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-9">

            <div class="card shadow-sm border-0 login-card overflow-hidden">
                <div class="row g-0">

                    <div class="col-md-6 d-none d-md-block login-side">
                        <div class="login-brand p-4 h-100 d-flex flex-column justify-content-center align-items-center text-center">
                            <img src="~/Content/Imagenes/logo_pato.svg"
                                 class="img-fluid login-hero-img"
                                 alt="Banco Los Patitos" />

                            <h2 class="mt-4 mb-1 login-brand-title">Banco Los Patitos</h2>
                            <div class="login-brand-subtitle">Sistema LAFT</div>

                            <p class="mt-3 mb-0 login-brand-text">
                                Acceso seguro para la gestión de personas, análisis y bitácora de eventos
                            </p>
                        </div>
                    </div>

                    <div class="col-12 col-md-6 login-form-col">
                        <div class="p-4 p-lg-5">

                            <h2 class="mb-1 fw-bold">Iniciar sesión</h2>
                            <p class="text-muted mb-4">Ingrese sus credenciales para continuar</p>

                            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "loginForm", role = "form", autocomplete = "on" }))
                            {
                                @Html.AntiForgeryToken()

                                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger py-2 mb-3" })

                                <!-- Email -->
                                <div class="mb-3">
                                    @Html.LabelFor(m => m.Email, new { @class = "form-label fw-semibold" })
                                    @Html.TextBoxFor(m => m.Email, new
                                    {
                                        @class = "form-control",
                                        placeholder = "correo@ejemplo.com",
                                        autocomplete = "username",
                                        inputmode = "email"
                                    })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
                                </div>

                                <div class="mb-3">
                                    @Html.LabelFor(m => m.Password, new { @class = "form-label fw-semibold" })

                                    <div class="input-group">
                                        @Html.PasswordFor(m => m.Password, new
                                        {
                                            @class = "form-control",
                                            placeholder = "Ingrese su contraseña",
                                            autocomplete = "current-password",
                                            id = "PasswordInput"
                                        })

                                        <button class="btn btn-outline-secondary"
                                                type="button"
                                                id="btnTogglePassword"
                                                aria-label="Mostrar u ocultar contraseña"
                                                aria-pressed="false">
                                            <i class="bi bi-eye" id="iconEye" aria-hidden="true"></i>
                                        </button>
                                    </div>

                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small" })
                                </div>

                                <!-- Remember me -->
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div class="form-check">
                                        @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input", id = "RememberMe" })
                                        @Html.LabelFor(m => m.RememberMe, new { @class = "form-check-label", @for = "RememberMe" })
                                    </div>

                                    @* @Html.ActionLink("¿Olvidaste tu contraseña?", "ForgotPassword", null, new { @class = "small text-decoration-none" }) *@
                                </div>

                                <button type="submit" class="btn btn-primary w-100 py-2">
                                    Iniciar sesión
                                </button>

                                <div class="text-center mt-3">
                                    @Html.ActionLink("Registrarse como usuario nuevo", "Register", null, new { @class = "small text-decoration-none" })
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        (function () {
            var btn = document.getElementById("btnTogglePassword");
            var input = document.getElementById("PasswordInput");
            var icon = document.getElementById("iconEye");

            if (!btn || !input || !icon) return;

            btn.addEventListener("click", function () {
                var isPassword = input.getAttribute("type") === "password";
                input.setAttribute("type", isPassword ? "text" : "password");

                btn.setAttribute("aria-pressed", isPassword ? "true" : "false");

                // Cambiar ícono Bootstrap
                icon.classList.remove(isPassword ? "bi-eye" : "bi-eye-slash");
                icon.classList.add(isPassword ? "bi-eye-slash" : "bi-eye");
            });
        })();
    </script>
}