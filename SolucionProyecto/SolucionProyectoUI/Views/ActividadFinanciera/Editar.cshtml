@model SolucionProyectoAbstracciones.ModelosParaUI.ActividadFinanciera.ActividadFinancieraDto
@{
    ViewBag.Title = "Editar Actividad Financiera";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Editar Actividad Financiera</h4>
                </div>
                <div class="card-body">
                    @if (TempData["Mensaje"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["Mensaje"]
                        </div>
                    }

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @using (Html.BeginForm("Editar", "ActividadFinanciera", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.IdActividadFinanciera)
                        @Html.HiddenFor(m => m.NivelDeRiesgo)
                        @Html.HiddenFor(m => m.FechaDeRegistro)

                        <div class="mb-3">
                            <label class="form-label">Nombre</label>
                            @Html.TextBoxFor(m => m.NombreActividadFinanciera, new { @class = "form-control", maxlength = "30", required = "required" })
                            @Html.ValidationMessageFor(m => m.NombreActividadFinanciera, "", new { @class = "text-danger" })
                            <small class="text-muted">Máximo 30 caracteres</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Descripción</label>
                            @Html.TextAreaFor(m => m.DescripcionActividadFinanciera, new { @class = "form-control", rows = 3, maxlength = "150", required = "required" })
                            @Html.ValidationMessageFor(m => m.DescripcionActividadFinanciera, "", new { @class = "text-danger" })
                            <small class="text-muted">Máximo 150 caracteres</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Nivel de Riesgo (Solo lectura)</label>
                            <input type="text" class="form-control"
                                   value="@(Model.NivelDeRiesgo == 1 ? "Bajo" : Model.NivelDeRiesgo == 2 ? "Medio" : "Alto")"
                                   disabled readonly />
                            <small class="text-muted">Este campo no se puede modificar</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Estado</label>
                            @Html.DropDownListFor(m => m.Estado,
                                new SelectList(new[]
                                {
                                    new { Value = true, Text = "Activo" },
                                    new { Value = false, Text = "Inactivo" }
                                }, "Value", "Text", Model.Estado),
                                new { @class = "form-control" })
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success">Guardar Cambios</button>
                            @Html.ActionLink("Cancelar", "ListaDeActividadFinanciera", null, new { @class = "btn btn-secondary" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}