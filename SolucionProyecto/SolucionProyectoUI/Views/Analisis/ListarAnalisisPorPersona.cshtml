@model IEnumerable<SolucionProyectoAbstracciones.ModelosParaUI.Analisis.AnalisisDto>

@{
    ViewBag.Title = "Análisis por Persona";
}

<h2 class="mb-0">Análisis por Persona</h2>

<div class="table-responsive">
    <table id="tablaAnalisisPorPersona" class="table table-striped table-hover w-100">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.CantidadArchivos)</th>
                <th>@Html.DisplayNameFor(model => model.CantidadPalabrasClave)</th>
                <th>@Html.DisplayNameFor(model => model.NivelDeRiesgo)</th>
                <th>@Html.DisplayNameFor(model => model.Comentario)</th>
                <th>@Html.DisplayNameFor(model => model.FechaDeAnalisis)</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CantidadArchivos</td>
                    <td>@item.CantidadPalabrasClave</td>
                    <td>
                        @{
                            string riesgoTexto = item.NivelDeRiesgo == 1 ? "Bajo"
                                                : item.NivelDeRiesgo == 2 ? "Medio"
                                                : item.NivelDeRiesgo == 3 ? "Alto"
                                                : item.NivelDeRiesgo == 4 ? "Crítico"
                                                : "Desconocido";
                        }
                        @riesgoTexto
                    </td>
                    <td>@item.Comentario</td>
                    <td>@item.FechaDeAnalisis.ToString("dd/MM/yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="mt-3">
    <a href="@Url.Action("ListarAnalisis", "Analisis")" class="btn btn-outline-dark">
        <i class="bi bi-arrow-left"></i> Regresar a Personas Analizadas
    </a>
</div>

@section Scripts {
    <script src="~/Scripts/Analisis/ListarAnalisisPorPersona/ListarAnalisisPorPersona.js"></script>
}
