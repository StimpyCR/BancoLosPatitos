@model SolucionProyectoAbstracciones.ModelosParaUI.ArchivosDeAnalisis.ArchivosDeAnalisisDto

@{
    Layout = null;
}

<div class="container-fluid">

    <div class="row g-3">

        <!-- Nombre -->
        <div class="col-md-6">
            <label class="form-label fw-semibold">
                @Html.DisplayNameFor(m => m.nombre)
            </label>
            <div class="form-control-plaintext border rounded px-3 py-2 bg-light">
                @Html.DisplayFor(m => m.nombre)
            </div>
        </div>

        <!-- Fuente -->
        <div class="col-md-6">
            <label class="form-label fw-semibold">
                @Html.DisplayNameFor(m => m.fuente)
            </label>
            <div class="form-control-plaintext border rounded px-3 py-2 bg-light"
                 style="word-break: break-all; overflow-wrap: anywhere;">
                @Html.DisplayFor(m => m.fuente)
            </div>
        </div>

        <!-- Fecha de registro -->
        <div class="col-md-6">
            <label class="form-label fw-semibold">
                @Html.DisplayNameFor(m => m.fechaDeRegistro)
            </label>
            <div class="form-control-plaintext border rounded px-3 py-2 bg-light">
                @Html.DisplayFor(m => m.fechaDeRegistro)
            </div>
        </div>

        <!-- Resumen -->
        <div class="col-12">
            <label class="form-label fw-semibold">
                Texto del Archivo
            </label>

            <div class="border rounded bg-light px-3 py-2"
                 style="white-space: pre-line; max-height: 300px; overflow-y: auto; line-height: 1.3;">
                @(Model.textoResumen?.Trim() ?? "")
            </div>
        </div>
    </div>
</div>