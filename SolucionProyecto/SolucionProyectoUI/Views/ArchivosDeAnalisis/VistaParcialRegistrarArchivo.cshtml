@model SolucionProyectoAbstracciones.ModelosParaUI.ArchivosDeAnalisis.ArchivosDeAnalisisDto

@{
    Layout = null;
}

@using (Html.BeginForm("VistaParcialRegistrarArchivo", "ArchivosDeAnalisis", FormMethod.Post, new { id = "formRegistrarArchivo" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row g-3">
            <!-- Columna izquierda -->
            <div class="col-md-6">

                <!-- Nombre -->
                <div class="mb-3">
                    @Html.LabelFor(m => m.nombre, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(m => m.nombre, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese el nombre del archivo" } })
                    @Html.ValidationMessageFor(m => m.nombre, "", new { @class = "text-danger" })
                </div>

                <!-- Fuente -->
                <div class="mb-3">
                    @Html.LabelFor(m => m.fuente, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(m => m.fuente, new { htmlAttributes = new { @class = "form-control", placeholder = "Ej: Web, Interno, Informe, etc." } })
                    @Html.ValidationMessageFor(m => m.fuente, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Columna derecha -->
            <div class="col-md-6">

                <!-- Texto resumen -->
                <div class="mb-3">
                    @Html.LabelFor(m => m.textoResumen, htmlAttributes: new { @class = "form-label" })
                    @Html.TextAreaFor(m => m.textoResumen, 7, 40,
                        new
                        {
                            @class = "form-control",
                            placeholder = "Ingrese el resumen del archivo (máx. recomendado 500-1000 caracteres)"
                        })
                    @Html.ValidationMessageFor(m => m.textoResumen, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <!-- Botones -->
        <div class="text-end mt-3">
            <button type="submit" class="btn btn-primary">Registrar</button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        </div>
    </div>
}