@{
    ViewBag.Title = "Inicio - Sistema LAFT - Banco Los Patitos Ahorro y Crédito";
}

<main class="container py-4">

    <div id="carouselExampleCaptions"
         class="carousel slide carousel-fade mb-3 carousel-hero"
         data-bs-ride="carousel">

        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0"
                    class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"
                    aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"
                    aria-label="Slide 3"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="3"
                    aria-label="Slide 4"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="4"
                    aria-label="Slide 5"></button>
        </div>

        <div class="carousel-inner rounded-3 shadow-sm">
            <div class="carousel-item active">
                <img src="~/Content/Imagenes/pexels-cytonn-955393.jpg"
                     class="d-block w-100"
                     alt="Prevención de lavado de activos"/>

                <div class="carousel-caption d-none d-md-block text-center"
                     style="background:rgba(0,0,0,0.45); padding:12px 20px; border-radius:8px; backdrop-filter:blur(2px);">
                    <h5 class="fw-bold">Prevención de Lavado de Activos</h5>
                    <p>
                        Banco Los Patitos Ahorro y Crédito controla operaciones sensibles
                        para cumplir la Ley Antilavado en Costa Rica
                    </p>
                </div>
            </div>

            <div class="carousel-item">
                <img src="~/Content/Imagenes/pexels-leeloothefirst-5561920.jpg"
                     class="d-block w-100"
                     alt="Análisis de riesgo financiero"/>
                <div class="carousel-caption d-none d-md-block text-center"
                     style="background:rgba(0,0,0,0.45); padding:12px 20px; border-radius:8px; backdrop-filter:blur(2px);">
                    <h5 class="fw-bold">Análisis de Riesgo LAFT</h5>
                    <p>
                        Noticias, archivos y palabras clave se combinan para evaluar el riesgo
                        de cada persona supervisada
                    </p>
                </div>
            </div>

            <div class="carousel-item">
                <img src="~/Content/Imagenes/ChatGPT Image 21 nov 2025, 21_38_18.png"
                     class="d-block w-100"
                     alt="Cumplimiento y auditoría"/>
                <div class="carousel-caption d-none d-md-block text-center"
                     style="background:rgba(0,0,0,0.45); padding:12px 20px; border-radius:8px; backdrop-filter:blur(2px);">
                    <h5 class="fw-bold">Cumplimiento y Auditoría</h5>
                    <p>
                        Cada evento queda registrado en la bitácora para fines de control interno
                        y trazabilidad
                    </p>
                </div>
            </div>

            <div class="carousel-item">
                <img src="~/Content/Imagenes/pexels-energepic-com-27411-2988232.jpg"
                     class="d-block w-100"
                     alt="Supervisión financiera"/>
                <div class="carousel-caption d-none d-md-block text-center"
                     style="background:rgba(0,0,0,0.45); padding:12px 20px; border-radius:8px; backdrop-filter:blur(2px);">
                    <h5 class="fw-bold">Supervisión Financiera</h5>
                    <p>
                        Las entidades financieras reportan actividades sospechosas
                        para proteger el sistema económico
                    </p>
                </div>
            </div>

            <div class="carousel-item">
                <img src="~/Content/Imagenes/pexels-luis-gomes-166706-546819.jpg"
                     class="d-block w-100"
                     alt="Tecnología y cumplimiento"/>
                <div class="carousel-caption d-none d-md-block text-center"
                     style="background:rgba(0,0,0,0.45); padding:12px 20px; border-radius:8px; backdrop-filter:blur(2px);">
                    <h5 class="fw-bold">Tecnología y Cumplimiento</h5>
                    <p>
                        Este sistema automatiza la detección temprana de posibles escenarios
                        relacionados con LAFT
                    </p>
                </div>
            </div>
        </div>

        <button class="carousel-control-prev" type="button"
                data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Anterior</span>
        </button>

        <button class="carousel-control-next" type="button"
                data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Siguiente</span>
        </button>
    </div>

    <div class="text-center mb-4">
        <h1 class="fw-bold" style="color:#002B5B;">
            Banco Los Patitos Ahorro y Crédito — Sistema de Análisis LAFT
        </h1>
        <p class="text-muted fs-5">
            Plataforma web para supervisar personas, actividades financieras y documentos
            relacionados con posibles casos de Lavado de Activos y Financiamiento al Terrorismo
        </p>
    </div>

    <h3 class="fw-semibold mb-3">Módulos del sistema</h3>

    <div class="row g-4 mb-4">
        <!-- Personas -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body d-flex flex-column">
                    <h4 class="fw-semibold mb-2">🧑‍💼 Personas</h4>
                    <p class="text-muted flex-grow-1">
                        Registro y administración de personas físicas y jurídicas supervisadas,
                        con su estado de riesgo actual.
                    </p>
                    @if (User.IsInRole("Admin") || User.IsInRole("Analista"))
                    {
                        <a href="@Url.Action("ListaPersonas", "Persona")" class="btn btn-outline-primary w-100 mt-2">
                            Gestionar personas
                        </a>
                    }

                </div>
            </div>
        </div>

        <!-- Actividades financieras -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body d-flex flex-column">
                    <h4 class="fw-semibold mb-2">💼 Actividades Financieras</h4>
                    <p class="text-muted flex-grow-1">
                        Catálogo de actividades vulnerables (casinos, administración de dinero,
                        comercio de metales, etc.) con su nivel de riesgo.
                    </p>
                    @if (User.IsInRole("Admin"))
                    {
                        <a href="@Url.Action("ListaDeActividadFinanciera", "ActividadFinanciera")" class="btn btn-outline-primary w-100 mt-2">
                            Ver actividades
                        </a>
                    }

                </div>
            </div>
        </div>

        <!-- Actividades por persona -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body d-flex flex-column">
                    <h4 class="fw-semibold mb-2">👥 Actividades por Persona</h4>
                    <p class="text-muted flex-grow-1">
                        Asociación de las actividades financieras que realiza cada persona,
                        permitiendo registrar y desactivar actividades específicas.
                    </p>
                    @if (User.IsInRole("Admin") || User.IsInRole("Analista"))
                    {
                        <a href="@Url.Action("ListaPersonas", "Persona")" class="btn btn-outline-primary w-100 mt-2">
                            Ver actividades de personas
                        </a>
                    }

                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <!-- Palabras clave -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body d-flex flex-column">
                    <h4 class="fw-semibold mb-2">🔎 Palabras Clave</h4>
                    <p class="text-muted flex-grow-1">
                        Base de datos de términos sensibles relacionados con LAFT, utilizada
                        para enlazar noticias y archivos a posibles riesgos.
                    </p>
                    @if (User.IsInRole("Admin") || User.IsInRole("Analista"))
                    {
                        <a href="@Url.Action("ListaDePalabrasClaves", "PalabraClave")" class="btn btn-outline-primary w-100 mt-2">
                            Administrar palabras clave
                        </a>
                    }

                </div>
            </div>
        </div>

        <!-- Archivos de análisis -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body d-flex flex-column">
                    <h4 class="fw-semibold mb-2">📄 Archivos de Análisis</h4>
                    <p class="text-muted flex-grow-1">
                        Registro de noticias, documentos y archivos de texto que se utilizarán
                        como insumo para los análisis de riesgo.
                    </p>
                    @if (User.IsInRole("Admin") || User.IsInRole("Analista"))
                    {
                        <a href="@Url.Action("ListarArchivosDeAnalisis", "ArchivosDeAnalisis")" class="btn btn-outline-primary w-100 mt-2">
                            Gestionar archivos
                        </a>
                    }

                </div>
            </div>
        </div>
       
        <!-- Módulo de Análisis -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body d-flex flex-column">
                    <h4 class="fw-semibold mb-2">⚖️ Análisis de Riesgo</h4>
                    <p class="text-muted flex-grow-1">
                        Núcleo del sistema: combina actividades, archivos y palabras clave
                        para generar un nivel de riesgo y comentarios para la toma de decisiones.
                    </p>
                    @if (User.IsInRole("Admin") || User.IsInRole("Analista"))
                    {
                        <a href="@Url.Action("ListarAnalisis", "Analisis")" class="btn btn-outline-primary w-100 mt-2">
                            Ver análisis
                        </a>
                    }

                </div>
            </div>
        </div>
    </div>

    <!-- Bitácora -->
    <div class="row g-4">
        <div class="col-md-12">
            <div class="card shadow-sm border-0">
                <div class="card-body d-flex flex-column flex-md-row align-items-md-center justify-content-between">
                    <div class="mb-3 mb-md-0">
                        <h4 class="fw-semibold mb-1">📝 Bitácora de Eventos</h4>
                        <p class="text-muted mb-0">
                            Registro histórico de operaciones de registro, edición, eliminación y errores
                            para efectos de control interno y auditoría.
                        </p>
                    </div>
                    @if (User.IsInRole("Admin"))
                    {
                        <a href="@Url.Action("ListaDeEventos", "Bitacora")" class="btn btn-outline-primary mt-2 mt-md-0">
                            Ver bitácora
                        </a>
                    }

                </div>
            </div>
        </div>
    </div>
</main>



