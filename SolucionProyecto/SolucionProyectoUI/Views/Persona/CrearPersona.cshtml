@model SolucionProyectoAbstracciones.ModelosParaUI.Persona.PersonaDto

@{
    Layout = null;
}

@using (Html.BeginForm("VistaParcialCrearPersona", "Persona", FormMethod.Post, new { id = "formCrearPersona" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row g-3">
            <!-- Columna izquierda -->
            <div class="col-md-6">

                <!-- Identificación -->
                <div class="mb-3">
                    @Html.LabelFor(m => m.Identificacion, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(m => m.Identificacion, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese la identificación" } })
                    @Html.ValidationMessageFor(m => m.Identificacion, "", new { @class = "text-danger" })
                </div>

                <!-- Nombre -->
                <div class="mb-3">
                    @Html.LabelFor(m => m.Nombre, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(m => m.Nombre, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese el nombre" } })
                    @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
                </div>

                <!-- Primer Apellido -->
                <div class="mb-3">
                    @Html.LabelFor(m => m.PrimerApellido, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(m => m.PrimerApellido, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese el primer apellido" } })
                    @Html.ValidationMessageFor(m => m.PrimerApellido, "", new { @class = "text-danger" })
                </div>

                <!-- Segundo Apellido -->
                <div class="mb-3">
                    @Html.LabelFor(m => m.SegundoApellido, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(m => m.SegundoApellido, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese el segundo apellido" } })
                    @Html.ValidationMessageFor(m => m.SegundoApellido, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Columna derecha -->
            <div class="col-md-6">

                <!-- Tipo de Identificación -->
                <div class="mb-3">
                    @Html.LabelFor(m => m.TipoIdentificacion, htmlAttributes: new { @class = "form-label" })
                    @Html.DropDownListFor(
                        m => m.TipoIdentificacion,
                        new SelectList(new[]
                        {
                            new { Value = 1, Text = "Física" },
                            new { Value = 2, Text = "Jurídica" }
                        }, "Value", "Text"),
                        "Seleccione el tipo de identificación",
                        new { @class = "form-control", id = "TipoIdentificacion" }
                    )
                    @Html.ValidationMessageFor(m => m.TipoIdentificacion, "", new { @class = "text-danger" })
                </div>

                <!-- Teléfono -->
                <div class="mb-3">
                    @Html.LabelFor(m => m.Telefono, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(m => m.Telefono, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese el número de teléfono" } })
                    @Html.ValidationMessageFor(m => m.Telefono, "", new { @class = "text-danger" })
                </div>

                <!-- Correo -->
                <div class="mb-3">
                    @Html.LabelFor(m => m.Correo, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(m => m.Correo, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese el correo electrónico" } })
                    @Html.ValidationMessageFor(m => m.Correo, "", new { @class = "text-danger" })
                </div>

                <!-- Dirección -->
                <div class="mb-3">
                    @Html.LabelFor(m => m.Direccion, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(m => m.Direccion, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese la dirección" } })
                    @Html.ValidationMessageFor(m => m.Direccion, "", new { @class = "text-danger" })
                </div>

            </div>
        </div>

        <!-- Estado de riesgo -->
        <div class="mt-2">
            <div class="col-md-6">
                <div class="mb-3">
                    @Html.LabelFor(m => m.estadoDeRiesgo, htmlAttributes: new { @class = "form-label" })
                    @Html.DropDownListFor(
                        m => m.estadoDeRiesgo,
                        new SelectList(new[]
                        {
                            new { Value = 0, Text = "Sin análisis" },
                            new { Value = 1, Text = "Bajo" },
                            new { Value = 2, Text = "Medio" },
                            new { Value = 3, Text = "Alto" },
                            new { Value = 4, Text = "Crítico" }
                        }, "Value", "Text"),
                        "Seleccione el estado de riesgo",
                        new { @class = "form-control" }
                    )
                    @Html.ValidationMessageFor(m => m.estadoDeRiesgo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <!-- Botones -->
        <div class="text-end mt-3">
            <button type="submit" class="btn btn-primary">Registrar</button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        </div>
    </div>
}
