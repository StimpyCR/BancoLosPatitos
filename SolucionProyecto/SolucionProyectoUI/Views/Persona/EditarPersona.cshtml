@model SolucionProyectoAbstracciones.ModelosParaUI.Persona.PersonaDto

@{
    Layout = null;

    var esJuridica = Model.TipoIdentificacion == 2;
}
<p style="color:red; font-size:20px;">
    DEBUG → TipoIdentificacion = @Model.TipoIdentificacion
</p>
@using (Html.BeginForm(
    "VistaParcialEditarPersona",
    "Persona",
    new { id = Model.Id },
    FormMethod.Post,
    new { id = "formEditarPersona" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.fechaDeRegistro)
    @Html.HiddenFor(m => m.fechaDeModificacion)
    @Html.HiddenFor(m => m.TipoIdentificacion)

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row g-3">
            <!-- Columna izquierda -->
            <div class="col-md-6">

                <!-- Nombre -->
                <div class="mb-3">
                    @Html.LabelFor(m => m.Nombre, htmlAttributes: new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Nombre, new
                    {
                        @class = "form-control",
                        placeholder = "Ingrese el nombre"
                    })
                    @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
                </div>

                <!-- Primer Apellido -->
                <div class="mb-3">
                    @Html.LabelFor(m => m.PrimerApellido, htmlAttributes: new { @class = "form-label" })

                    @if (esJuridica)
                    {
                        @Html.TextBoxFor(m => m.PrimerApellido, new
                        {
                            @class = "form-control",
                            @readonly = "readonly"
                        })
                        <small class="text-muted">
                            No se permite editar apellidos para personas jurídicas.
                        </small>
                    }
                    else
                    {
                        @Html.TextBoxFor(m => m.PrimerApellido, new
                        {
                            @class = "form-control",
                            placeholder = "Ingrese el primer apellido"
                        })
                    }

                    @Html.ValidationMessageFor(m => m.PrimerApellido, "", new { @class = "text-danger" })
                </div>

                <!-- Segundo Apellido -->
                <div class="mb-3">
                    @Html.LabelFor(m => m.SegundoApellido, htmlAttributes: new { @class = "form-label" })

                    @if (esJuridica)
                    {
                        @Html.TextBoxFor(m => m.SegundoApellido, new
                        {
                            @class = "form-control",
                            @readonly = "readonly"
                        })
                        <small class="text-muted">
                            No se permite editar apellidos para personas jurídicas.
                        </small>
                    }
                    else
                    {
                        @Html.TextBoxFor(m => m.SegundoApellido, new
                        {
                            @class = "form-control",
                            placeholder = "Ingrese el segundo apellido"
                        })
                    }

                    @Html.ValidationMessageFor(m => m.SegundoApellido, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Columna derecha -->
            <div class="col-md-6">

                <!-- Teléfono -->
                <div class="mb-3">
                    @Html.LabelFor(m => m.Telefono, htmlAttributes: new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Telefono, new
                    {
                        @class = "form-control",
                        placeholder = "Ingrese el número de teléfono"
                    })
                    @Html.ValidationMessageFor(m => m.Telefono, "", new { @class = "text-danger" })
                </div>

                <!-- Correo -->
                <div class="mb-3">
                    @Html.LabelFor(m => m.Correo, htmlAttributes: new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Correo, new
                    {
                        @class = "form-control",
                        placeholder = "Ingrese el correo electrónico"
                    })
                    @Html.ValidationMessageFor(m => m.Correo, "", new { @class = "text-danger" })
                </div>

                <!-- Dirección -->
                <div class="mb-3">
                    @Html.LabelFor(m => m.Direccion, htmlAttributes: new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Direccion, new
                    {
                        @class = "form-control",
                        placeholder = "Ingrese la dirección"
                    })
                    @Html.ValidationMessageFor(m => m.Direccion, "", new { @class = "text-danger" })
                </div>

            </div>
        </div>

        <!-- Estado (activo / inactivo) -->
        <div class="col-md-6">
            <div class="mb-3">
                @Html.LabelFor(m => m.estado, htmlAttributes: new { @class = "form-label d-block" })
                <div class="form-check form-switch">
                    @Html.CheckBoxFor(m => m.estado, new { @class = "form-check-input", role = "switch" })
                    <span class="ms-2">
                        @(Model.estado ? "Activo" : "Inactivo")
                    </span>
                </div>
                @Html.ValidationMessageFor(m => m.estado, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Botones -->
        <div class="text-end mt-3">
            <button type="submit" class="btn btn-primary">Guardar</button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        </div>
    </div>
}


