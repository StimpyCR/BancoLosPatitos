@model SolucionProyectoAbstracciones.ModelosParaUI.Persona.PersonaDto

@{
    Layout = null; // si esto es un partial en modal. Si es vista normal, quítalo.
}

<div class="container-fluid">
    <div class="row g-3">

        <!-- Identificación -->
        <div class="col-md-6">
            <label class="form-label fw-semibold">
                @Html.DisplayNameFor(m => m.Identificacion)
            </label>
            <div class="form-control-plaintext border rounded px-3 py-2 bg-light">
                @Html.DisplayFor(m => m.Identificacion)
            </div>
        </div>

        <!-- Tipo Identificación -->
        <div class="col-md-6">
            <label class="form-label fw-semibold">
                @Html.DisplayNameFor(m => m.TipoIdentificacion)
            </label>

            <div class="form-control-plaintext border rounded px-3 py-2 bg-light">
                @{
                    int tipo = Model.TipoIdentificacion;

                    string textoTipo = tipo switch
                    {
                        1 => "Física",
                        2 => "Jurídica",
                        _ => "No definido"
                    };
                }
                @textoTipo
            </div>
        </div>

        <!-- Nombre -->
        <div class="col-md-4">
            <label class="form-label fw-semibold">
                @Html.DisplayNameFor(m => m.Nombre)
            </label>
            <div class="form-control-plaintext border rounded px-3 py-2 bg-light">
                @Html.DisplayFor(m => m.Nombre)
            </div>
        </div>

        <!-- Primer Apellido -->
        <div class="col-md-4">
            <label class="form-label fw-semibold">
                @Html.DisplayNameFor(m => m.PrimerApellido)
            </label>

            <div class="form-control-plaintext border rounded px-3 py-2 bg-light">
                @{
                    string primerApellido = Model.PrimerApellido;

                    string textoPrimerApellido = !string.IsNullOrWhiteSpace(primerApellido)
                        ? primerApellido
                        : "----";
                }
                @textoPrimerApellido
            </div>
        </div>

        <!-- Segundo Apellido -->
        <div class="col-md-4">
            <label class="form-label fw-semibold">
                @Html.DisplayNameFor(m => m.SegundoApellido)
            </label>

            <div class="form-control-plaintext border rounded px-3 py-2 bg-light">
                @{
                    string segundoApellido = Model.SegundoApellido;

                    string textoSegundoApellido = !string.IsNullOrWhiteSpace(segundoApellido)
                        ? segundoApellido
                        : "----";
                }
                @textoSegundoApellido
            </div>
        </div>

        <!-- Teléfono -->
        <div class="col-md-6">
            <label class="form-label fw-semibold">
                @Html.DisplayNameFor(m => m.Telefono)
            </label>
            <div class="form-control-plaintext border rounded px-3 py-2 bg-light">
                @Html.DisplayFor(m => m.Telefono)
            </div>
        </div>

        <!-- Correo -->
        <div class="col-md-6">
            <label class="form-label fw-semibold">
                @Html.DisplayNameFor(m => m.Correo)
            </label>
            <div class="form-control-plaintext border rounded px-3 py-2 bg-light"
                 style="word-break: break-all; overflow-wrap: anywhere;">
                @Html.DisplayFor(m => m.Correo)
            </div>
        </div>

        <!-- Dirección -->
        <div class="col-12">
            <label class="form-label fw-semibold">
                @Html.DisplayNameFor(m => m.Direccion)
            </label>
            <div class="form-control-plaintext border rounded px-3 py-2 bg-light"
                 style="white-space: pre-line;">
                @Html.DisplayFor(m => m.Direccion)
            </div>
        </div>

        <!-- Estado de riesgo -->
        <div class="col-md-4">
            <label class="form-label fw-semibold">
                @Html.DisplayNameFor(m => m.estadoDeRiesgo)
            </label>

            <div class="form-control-plaintext border rounded px-3 py-2 bg-light">
                @{
                    int estado = Model.estadoDeRiesgo;

                    string textoRiesgo = estado switch
                    {
                        1 => "Bajo",
                        2 => "Medio",
                        3 => "Alto",
                        4 => "Crítico",
                        _ => "No definido"
                    };
                }
                @textoRiesgo
            </div>
        </div>

        <!-- Fecha de registro -->
        <div class="col-md-6">
            <label class="form-label fw-semibold">
                @Html.DisplayNameFor(m => m.fechaDeRegistro)
            </label>
            <div class="form-control-plaintext border rounded px-3 py-2 bg-light">
                @Html.DisplayFor(m => m.fechaDeRegistro)
            </div>
        </div>

        <!-- Fecha de modificación -->
        <div class="col-md-6">
            <label class="form-label fw-semibold">
                @Html.DisplayNameFor(m => m.fechaDeModificacion)
            </label>
            <div class="form-control-plaintext border rounded px-3 py-2 bg-light">
                @Html.DisplayFor(m => m.fechaDeModificacion)
            </div>
        </div>

        <!-- Estado -->
        <div class="col-md-4">
            <label class="form-label fw-semibold">
                @Html.DisplayNameFor(m => m.estado)
            </label>

            <div class="form-control-plaintext border rounded px-3 py-2 bg-light">
                @{
                    bool estadoPersona = Model.estado;

                    string textoEstado = estadoPersona
                        ? "Activo"
                        : "Inactivo";
                }
                @textoEstado
            </div>
        </div>
    </div>
</div>

